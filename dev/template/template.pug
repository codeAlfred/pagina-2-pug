doctype html
html
    block config
        include ../config/config.pug
    head
        meta(charset="utf-8")
        block head
            title= title_page + " | " + page
            each link in css
                link(rel="stylesheet" href="css/" + link)
    body
        block header
            include ../blocks/header.pug
        block bannerPrincipal
            if pagina_actual === "inicio"
                include ../blocks/banner.pug
        block bannerSecundario
            if pagina_actual !== "inicio"
                section.banner-secundario
                    img(src="img/"+pagina_actual+".jpeg")
            
        block contenido
        
        block contactenos
            include ../blocks/contactenos.pug
        block footer
            include ../blocks/footer.pug
        